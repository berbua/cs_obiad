{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/server.js"
    }
  ],
  "functions": {
    "backend/server.js": {
      "includeFiles": "backend/**"
    }
  },
  "env": {
    "NODE_ENV": "production",
    "VERCEL": "true"
  }
}
